<div class="panel panel-default m-t-30">
  <div class="panel-heading">
    <h1 class="panel-title">Show Discount</h1>
    <div class="pull-right">
      <%= link_to discounts_path, class: 'btn btn-default' do %>
        <i class="fa fa-percent"></i>
      <% end %>
      <%= link_to edit_discount_path(@discount), class: 'btn btn-warning' do %>
        <i class="fa fa-pencil"></i>
      <% end %>
      <%= link_to @discount, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
    <span class="clearfix"></span>
  </div>

  <div class="panel-body">
    <%= render 'shared/notice' %>
    <%= render 'form', discount: @discount %>
  </div>
</div>
