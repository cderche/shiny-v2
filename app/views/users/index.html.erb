<div class="panel panel-default m-t-30">
  <div class="panel-heading">
    <h1 class="panel-title">Users</h1>
    <%# link_to 'New Product', new_product_path, class: 'pull-right btn btn-success' %>
    <span class="clearfix"></span>
  </div>
  <div class="panel-body">
    <%= render 'shared/notice' %>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <th>Email</th>
          <th>Joined</th>
          <th>Last signed in</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="v-align-middle"><%= user.email %></td>
              <td class="v-align-middle"><%= time_ago_in_words(user.created_at) %> ago</td>
              <td class="v-align-middle"><%= "#{time_ago_in_words(user.last_sign_in_at)} ago" if user.last_sign_in_at %></td>
              <!-- <td class="v-align-middle"><%# link_to 'Show', user, class: 'btn btn-xs btn-primary' %></td> -->
              <!-- <td class="v-align-middle"><%# link_to 'Edit', edit_product_path(product), class: 'btn btn-xs btn-warning' %></td> -->
              <!-- <td class="v-align-middle"><%# link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td> -->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
