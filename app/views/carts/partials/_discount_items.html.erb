<!-- DISCOUNT ITEMS INPUT -->
<div class="form-group">
  <%= f.label :discount_items, class: 'col-sm-3 control-label' %>

  <div class="col-sm-9">
    <% if action_name != 'show' %>
    <a href="#" data-toggle="modal" data-target="#discounts-modal" class="btn btn-primary btn-sm pull-right"><i class="fa fa-percent"></i></a>
    <div class="clearfix"></div>
    <% end %>
    <div class="table-responsive">
      <table class="table table-condensed text-right">
        <thead>
          <th></th>
          <th class="text-right">Discount</th>
          <th class="text-right">Value</th>
          <th class="text-right">Real Value</th>
        </thead>
        <tbody id="discount_items">
          <%= render @cart.discount_items %>
        </tbody>
      </table>
    </div>
  </div>

</div>
<!-- END DISCOUNT ITEMS INPUT -->
