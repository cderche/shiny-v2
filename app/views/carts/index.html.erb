<div class="panel panel-default m-t-30">
  <div class="panel-heading">
    <h1 class="panel-title">Carts</h1>
    <%= link_to 'New Cart', carts_path(cart: {}), method: :post, class: 'pull-right btn btn-success' %>
    <span class="clearfix"></span>
  </div>
  <div class="panel-body">
    <%= render 'shared/notice' %>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <th>Id</th>
          <th>Start date</th>
          <th>Start time</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @carts.each do |cart| %>
            <tr>
              <td class="v-align-middle"><%= cart.id %></td>
              <td class="v-align-middle"><%= cart.start_date %></td>
              <td class="v-align-middle"><%= cart.start_time %></td>
              <td class="v-align-middle"><%= link_to 'Show', cart, class: 'btn btn-xs btn-primary' %></td>
              <td class="v-align-middle"><%= link_to 'Edit', edit_cart_path(cart), class: 'btn btn-xs btn-warning' %></td>
              <td class="v-align-middle"><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
