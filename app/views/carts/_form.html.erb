<%= form_for(cart, html: { class: 'form-horizontal' }) do |f| %>

  <%= render partial: 'shared/error', locals: { object: cart } %>

  <%= render 'carts/partials/user', f: f %>
  <%= render 'carts/partials/start_date', f: f %>
  <%= render 'carts/partials/start_time', f: f %>
  <%= render 'carts/partials/note', f: f %>
  <%= render 'carts/partials/line_items', f: f %>
  <%= render 'carts/partials/discount_items', f: f %>
  <%= render 'carts/partials/session_uri', f: f %>
  <%= render 'carts/partials/button', f: f %>

<% end %>

<%= render 'carts/partials/discounts_modal' %>
<%= render 'carts/partials/products_modal' %>





<% content_for :script do %>
<script type="text/javascript">
  <% if action_name != 'show' %>
  $('.date').datepicker({ defaultViewDate: moment(<%= @cart.start_date %>).toDate(), startDate: 'today', format: 'dd/mm/yyyy' });
  <% end %>

  $(".timepicker").timepicker({ minuteStep: 30, defaultTime: "<%= @cart.start_time %>", showMeridian: false });
</script>
<% end %>
