<%= form_for(cart, html: { class: 'form-horizontal' }) do |f| %>
  <%= render partial: 'shared/error', locals: { object: cart } %>

  <div class="form-group">
    <%= f.label :start_date, class: 'col-sm-3 control-label' %>
    <div class="col-sm-3 col-md-2">
      <%= f.text_field :start_date, class: 'form-control', disabled: (action_name == 'show') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_time, class: 'col-sm-3 control-label' %>
    <div class="col-sm-3 col-md-2">
      <%= f.text_field :start_time, class: 'form-control', disabled: (action_name == 'show') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :note, class: 'col-sm-3 control-label' %>
    <div class="col-sm-3 col-md-2">
      <%= f.text_area :note, class: 'form-control', disabled: (action_name == 'show') %>
    </div>
  </div>

  <% if action_name != 'show' %>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <div class="col-sm-9">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>

<% end %>

<% content_for :script do %>
  <script type="text/javascript">

  </script>
<% end %>
