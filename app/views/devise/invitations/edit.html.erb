<h3 class="p-t-35"><%= t 'devise.invitations.edit.header' %></h3>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), html: { method: :put, class: 'p-t-15' } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  <% if f.object.class.require_password_on_accepting %>
  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>
  <% end %>

  <p><%= f.submit t("devise.invitations.edit.submit_button") %></p>
<% end %>
