<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> bordered">
    <button class="close" data-dismiss="alert"></button>
    <%= content_tag :i, nil, class: 'fa fa-exclamation-triangle' if key.to_sym == :danger %>
    <span><%= value %></span>
  </div>
<% end %>
<!-- EMPTY THE FLASH: FIXES ISSUE WITH FLASH ON AJAX -->
<% flash.clear %>
