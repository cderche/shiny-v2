<!-- PROFILE -->
<div class=" pull-right">
  <div class="visible-lg visible-md m-t-10">
    <div class="pull-left p-r-10 p-t-10 fs-16 font-heading">
      <span class="semi-bold">David</span>
      <span class="text-master">Nest</span>
    </div>
    <div class="dropdown pull-right">
      <button class="profile-dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="thumbnail-wrapper d32 circular inline m-t-5">
          <i class="fa fa-user-circle fa-2x"></i>
          <%# image_tag 'avatar.jpg', alt: 'avatar', width: 32, height: 32, data: { src: image_path('avatar.jpg'), src_retina: image_path('avatar.jpg') } %>
        </span>
      </button>
      <ul class="dropdown-menu profile-dropdown" role="menu">
        <li>
          <%= link_to edit_user_registration_path do %>
            <i class="pg-settings_small"></i>
            <span>Settings</span>
          <% end %>
        </li>
        <li>
          <a href="#">
            <i class="pg-outdent"></i>
            Feedback</a>
        </li>
        <li>
          <a href="#">
            <i class="pg-signals"></i>
            Help</a>
        </li>
        <li class="bg-master-lighter">
          <%= link_to destroy_user_session_path, method: :delete do %>
            <span class="pull-left">Logout</span>
            <span class="pull-right">
              <i class="pg-power"></i>
            </span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<!-- END PROFILE -->
