<p id="notice"><%= notice %></p>

<h1>Discount Items</h1>

<table>
  <thead>
    <tr>
      <th>Discount</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discount_items.each do |discount_item| %>
      <tr>
        <td><%= discount_item.discount %></td>
        <td><%= discount_item.cart %></td>
        <td><%= link_to 'Show', discount_item %></td>
        <td><%= link_to 'Edit', edit_discount_item_path(discount_item) %></td>
        <td><%= link_to 'Destroy', discount_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discount Item', new_discount_item_path %>
