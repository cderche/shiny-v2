<%= form_for(product, html: { class: 'form-horizontal' }) do |f| %>
  <%= render partial: 'shared/error', locals: { object: product } %>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :title, class: 'form-control', disabled: (action_name == 'show') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_area :description, class: 'form-control', disabled: (action_name == 'show') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image_url, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :image_url, class: 'form-control', disabled: (action_name == 'show') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :price, class: 'form-control autonumeric', data: { a_sign: ' RUB', p_sign: 's' }, disabled: (action_name == 'show') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <div class="radio radio-success">
        <%= f.collection_radio_buttons :category, Product.categories, :first, :first, disabled: (Product.categories.map { |k,v| k } if (action_name == 'show')) %>
        <!-- , checked: product.category, disabled: (action_name == 'show') %> -->
      </div>
    </div>
  </div>

  <% if action_name != 'show' %>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <div class="col-sm-9">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>

<% end %>

<% content_for :script do %>
  <script type="text/javascript">
    $('.autonumeric').autoNumeric('init');
  </script>
<% end %>
