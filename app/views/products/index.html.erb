<div class="panel panel-default m-t-30">
  <div class="panel-heading">
    <h1 class="panel-title">Products</h1>
    <%= link_to 'New Product', new_product_path, class: 'pull-right btn btn-default' %>
    <span class="clearfix"></span>
  </div>
  <div class="panel-body">
    <% if notice %>
    <div class="alert alert-info">
      <%= notice %>
    </div>
    <% end %>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <th>Title</th>
          <th>Category</th>
          <th>Description</th>
          <th>Price</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td class="v-align-middle"><%= product.title %></td>
              <td class="v-align-middle"><%= product.category %></td>
              <td class="v-align-middle"><%= product.description %></td>
              <td class="v-align-middle"><%= product.price %></td>
              <td class="v-align-middle"><%= link_to 'Show', product, class: 'btn btn-xs btn-primary' %></td>
              <td class="v-align-middle"><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-xs btn-warning' %></td>
              <td class="v-align-middle"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
