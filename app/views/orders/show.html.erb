<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @order.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @order.time %>
</p>

<p>
  <strong>Note:</strong>
  <%= @order.note %>
</p>

<p>
  <strong>User:</strong>
  <%= @order.user %>
</p>

<p>
  <strong>Token:</strong>
  <%= @order.token %>
</p>

<p>
  <strong>Charged at:</strong>
  <%= @order.charged_at %>
</p>

<p>
  <strong>Recurring:</strong>
  <%= @order.recurring? %>
</p>

<p>
  <strong>Line Items:</strong><br>
  <% @order.line_items.each do |item| %>
    <%= item.product.title %>, <%= item.quantity %>, <%= item.total_price %><br>
  <% end %>
</p>
<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>

<%= link_to "Pay", charge_payments_path(order_id: @order.id), class: 'btn' %>
